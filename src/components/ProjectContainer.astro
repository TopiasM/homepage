---
import { Image } from "astro:assets";
import GithubLogo from "phosphor-astro/GithubLogoFill.astro";

const { img, imgAlt, url, title, description, tech, repo } = Astro.props;
---

<div
  class="flex flex-col md:flex-row border border-neutral-900 rounded overflow-hidden"
>
  <a
    class="w-full md:w-5/12 lg:w-3/12 z-10 size-fit hover:z-0 border-neutral-900 hover:border-zinc-800 border-b md:border-b-0"
    href={url}
    target="_blank"
  >
    <Image
      src={img}
      alt={imgAlt}
      width={800}
      class="aspect-video rounded-t md:rounded-none"
    />
  </a>
  <div
    class="flex flex-col gap-0.5 w-full md:w-7/12 lg:w-9/12 mt-2 md:mt-0 pb-4 md:py-1 xl:py-2 px-4 md:pl-6 border-0 md:border md:border-dashed border-neutral-900"
  >
    <span class="flex flex-row justify-between items-center">
      <a href={url} class="hover:brightness-150 duration-150">
        <h5 class="gradient-heading text-2xl font-semibold">{title}</h5>
      </a>
      {
        repo && (
          <a
            href={`https://github.com/${repo}`}
            class="flex flex-row text-zinc-400 text-sm font-semibold items-center gap-1 hover:text-zinc-300 hover:duration-150"
          >
            <GithubLogo height="16" class="rounded-full" />
            Source code
          </a>
        )
      }
    </span>
    <p class="text-zinc-300 text-lg text-pretty mt-0.5">
      {description}
    </p>
    <p
      class="text-zinc-400 font-semibold mt-1 gap-1.5 text-wrap flex flex-wrap"
    >
      {
        tech.map((t: string) => (
          <span class="px-2 bg-neutral-950 rounded hover:bg-neutral-900 duration-150">
            {t}
          </span>
        ))
      }
    </p>
  </div>
</div>
