---
import onobooImg from "../assets/onoboo_169_compressed.png";
import homepageImg from "../assets/homepage_169_compressed.png";
import ProjectContainer from "./ProjectContainer.astro";
import type { Project } from "../types";
import { underlineLinkClasses } from "../consts";

const projects: Project[] = [
  {
    img: onobooImg,
    imgAlt: "Screenshot of onoboo.com homepage",
    url: "https://onoboo.com",
    title: "onoboo",
    description: `Korean language learning platform, that is still under development.`,
    tech: [
      "Typescript",
      "Sveltekit",
      "PostgreSQL",
      "Supabase",
      "Tailwind CSS",
      "Flowbite",
    ],
  },
  {
    img: homepageImg,
    imgAlt: "Screenshot of topias.dev",
    url: "https://topias.dev",
    title: "topias.dev",
    description: `You're looking at it! :) Under 100kb and perfect Lighthouse score.`,
    tech: ["Typescript", "Astro", "Tailwind CSS"],
    repo: "TopiasM/homepage",
  },
];

const githubUrl = import.meta.env.PUBLIC_GITHUB_URL;
---

<div class="mt-6">
  <span class="flex">
    <h4 class="text-3xl font-bold gradient-heading">My Projects.</h4>
  </span>
  <div class="flex flex-col gap-4 mt-4">
    {
      projects.map(({ img, imgAlt, url, title, description, tech, repo }) => (
        <ProjectContainer
          {img}
          {imgAlt}
          {url}
          {title}
          {description}
          {tech}
          {repo}
        />
      ))
    }
  </div>
  <div
    class="texture-bg flex flex-wrap py-4 px-1 text-lg sm:text-xl text-zinc-300 mt-4 rounded font-semibold justify-center"
  >
    Check my
    <a href={githubUrl} target="_blank" class={underlineLinkClasses + "mx-1"}>
      Github
    </a>
    for more projects
  </div>
</div>
