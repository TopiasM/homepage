---
import { underlineLinkClasses as linkClasses } from "../consts";

const linkedinUrl = import.meta.env.PUBLIC_LINKEDIN_URL;
---

<div class="flex flex-col font-semibold text-zinc-300 text-xl text-center py-2">
  For more info check my
  <div>
    <a href="/resume" class={linkClasses}>Resume</a>
    {
      linkedinUrl && (
        <Fragment>
          {" "}
          &{" "}
          <a href={linkedinUrl} target="_blank" class={linkClasses}>
            LinkedIn
          </a>
        </Fragment>
      )
    }
  </div>
</div>
